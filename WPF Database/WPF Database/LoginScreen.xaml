<Window x:Class="WPF_Database.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Database"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300" Background="#f3dcaa">
    <Grid>
        <Border Background="#f3ecaa" CornerRadius="20" Margin="20">
            <StackPanel Margin="20">
                <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
                <Separator></Separator>
                <Label x:Name="tihi" Content="Username" Foreground="White"/>
                <TextBox Name="txtUsername" Background="Black" Foreground="White" FontSize="18"></TextBox>
                <Label Content="Password" Foreground="White"/>
                <PasswordBox Name="txtPassword" Background="Black" Foreground="White" FontSize="18"></PasswordBox>
                <Button Name="btnSubmit" Click="BtnSubmit_Click" Content="Submit" Margin="60 10" Background="Black" Foreground="White" FontSize="18"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
